<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/download"
    tools:context=".DetailPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        android:layout_marginHorizontal="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_marginTop="30dp">
            <Button
                android:id="@+id/backToHomePage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_button"
                android:fontFamily="sans-serif"
                android:text="Back">
            </Button>
            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description Page"
                android:textColor="@color/black"
                android:layout_marginLeft="40dp"
                android:textSize="20sp">
            </TextView>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageDetailPage"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@drawable/border"
            android:layout_marginHorizontal="55dp"
            android:layout_marginTop="15dp" />
        <TextView
            android:id="@+id/nameDetailPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:padding="5dp"
            android:textAlignment="center"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:padding="5dp"
            android:text="Description:"
            android:textColor="@color/black"></TextView>

        <TextView
            android:id="@+id/descriptionDetailPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#40FFFFFF"
            android:backgroundTint="#FFFFFF"
            android:padding="5dp"
            android:text="sjhdosahjdjsoajdjsadodasodjajdo"
            android:textColor="@color/black">

        </TextView>

        <Button
            android:id="@+id/addToCart"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="125dp"
            android:layout_marginTop="140dp"
            android:padding="10dp"
            android:background="@drawable/border_button"
            android:fontFamily="sans-serif"
            android:text="Add To Cart">

        </Button>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>